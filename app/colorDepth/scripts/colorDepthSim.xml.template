<application>
<name>colorDepthSim App</name>
        <module>
                <name>cartesianServer</name>
                <parameters>--env asibot_kitchen_kinect.env.xml --extraRobot 1dof</parameters>
                <node>localhost</node>
        </module>
        <module>
                <name>yarpview</name>
                <parameters>--name /yarpview/depth:i</parameters>
                <node>localhost</node>
        </module>
        <connection>
                <from>/ravebot/kinect_depth/img:o</from>
                <to>/yarpview/depth:i</to>
        </connection>

        <module>
                <name>colorDepth</name>
                <node>localhost</node>
        </module>
        <connection>
                <from>/ravebot/kinect_rgb/img:o</from>
                <to>/colorDepth/img:i</to>
        </connection>
        <connection>
                <from>/ravebot/kinect_depth/depth:o</from>
                <to>/colorDepth/depth:i</to>
        </connection>

        <module>
                <name>yarpview</name>
                <parameters>--name /yarpview/img:i</parameters>
                <node>localhost</node>
        </module>
        <connection>
                <from>/colorDepth/img:o</from>
                <to>/yarpview/img:i</to>
        </connection>

</application>


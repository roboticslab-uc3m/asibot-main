            <translation>0.03 0.07 0</translation>
            <radius>0.011</radius>
            <height>0.055</height>
        </Geom>
    </Body>
    <Joint name="fake" type="hinge" enable="false">
        <body>chair</body>
        <body>chairDocking</body>
        <limits>0 0</limits>
    </Joint>

<Environment>
    <physicsengine type="ode">
        <odeproperties>
            <friction>0.01</friction>
            <gravity>0 0 -9.81</gravity>
        </odeproperties>
    </physicsengine>

    <Robot file="./asibot.robot.xml">
        <RotationAxis>0 0 1 30</RotationAxis>
        <translation>1.5 1.515 0.7491</translation>
        <!--AttachedSensor name="Tip_camera">
            <link>link5</link>
            <translation>0 0 1.2</translation>
            <rotationaxis>0 0 1 -90</rotationaxis>
            <sensor file="data/camera.sensor.xml">
            </sensor>
        </AttachedSensor-->
    </Robot>

    <KinBody file="./docking.kinbody.xml">
        <rotationaxis>1 0 0 180</rotationaxis>
        <translation>1.5 1.5 0.646</translation>
    </KinBody>

    <!-- <KinBody file="./docking2.kinbody.xml">
        <rotationaxis>1 0 0 180</rotationaxis>
        <translation>1.5 2.0 0.646</translation>
    </KinBody> -->
      
    <KinBody file="./silla.kinbody.xml">
        <rotationaxis>1 0 0 -90</rotationaxis>
        <translation>1.8 1.55 0.7</translation>
    </KinBody>

    <KinBody file="./cocina.kinbody.xml">
        <translation>0 0 0</translation>
        <rotationaxis>1 0 0 0</rotationaxis>
    </KinBody>

    <KinBody file="./lataR.kinbody.xml">
        <translation>1.1791 0.4445 0.865</translation>
    </KinBody>

    <Robot file="./ipcam.robot.xml">
        <translation>2.15 0.05 1.2</translation>
        <rotationaxis>0 0 1 145</rotationaxis>
        <rotationaxis>0 1 0 1</rotationaxis>
        <AttachedSensor name="Ip_camera">
            <link>linkI</link>
            <translation>0.005 0 0.01</translation>
            <rotationaxis>0 1 0 90</rotationaxis>
            <rotationaxis>1 0 0 -90</rotationaxis>
            <!-- COPIED FROM sensor file="data/camera.sensor.xml"-->
            <sensor name="camera" type="BaseCamera">
                <KK>1280 1024 640 512</KK>
                <width>1280</width>
                <height>1024</height>
                <framerate>5</framerate>
                <color>0.5 0.5 1</color>
            </sensor>
        </AttachedSensor>
    </Robot>

</Environment>

